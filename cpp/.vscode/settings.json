{
  "debug.allowBreakpointsEverywhere": true,
   "files.associations": {
    "*.sass": "sass",
    "*.algo": "javascript",
    "**/RootDir/**/*": "javascript",
    "*.json": "jsonc"
  },
  "typescript.validate.enable": false,
  "javascript.validate.enable": false,
  "C_Cpp.autoAddFileAssociations": false,
  "C_Cpp.default.intelliSenseMode": "linux-clang-x64",
  "C_Cpp.clang_format_style": "{ BasedOnStyle: Chromium, IndentWidth: 2, ColumnLimit: 0}",
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Chromium, IndentWidth: 2, ColumnLimit: 0}",
  "diffEditor.ignoreTrimWhitespace": true,
  "editor.find.autoFindInSelection":"multiline",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "[javascript]": { "editor.tabSize": 2 },
  "[cpp]": { "editor.tabSize": 2 }  
}
