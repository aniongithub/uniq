{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "g++ build and debug active file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [
        // "-rdynamic",
        // "-g",
        // "-save-temps",
        // "-lpthread"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      // "sourceFileMap": { "/c/": "C:/"},
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "g++ build active file",
      "miDebuggerPath": "/usr/bin/gdb"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Node Launch Main",
      "runtimeExecutable": "node",
      "runtimeArgs": [], //["--prof"],
      "cwd": "${workspaceFolder}",
      "env":{"DEBUG":"*"},
      "program": "${workspaceFolder}/js/test.js",
      // "args": ["help"],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js",
        "${workspaceFolder}/node_modules/**/*.js",
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Nodemon 1",
      "runtimeExecutable": "nodemon",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/js/test.js",
      // "args": ["."],
      "restart": true,
      "env": {
        "NODE_ENV": "development",
        "DOMAIN": "xxx",
        "FORCE_COLOR": "10"
      },
      "port": 9229,
      "runtimeArgs": [
        "--inspect-brk=9229"
      ],
      //"outputCapture": "std",
      "console": "integratedTerminal",
      // "internalConsoleOptions": "neverOpen"
      "trace": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Node Current File",
      // "console": "externalTerminal",
      // "args": [".", ".git",".vscode","node_modules","bin"],
      "console": "integratedTerminal",
      "env": {
        "DEBUG": "*"
      },
      "program": "${file}",
      "skipFiles": [
        "<node_internals>/**/*.js",
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}/utils/include.js",
        "${workspaceFolder}/utils/is.js",
        "${workspaceFolder}/utils/test.js",
        "${workspaceFolder}/utils/task.js",
        "${workspaceFolder}/utils/log.js"
      ]
    },
    {
      "type": "lldb",
      "request": "custom",
      "name": "Custom launch",
      "targetCreateCommands": [
        "target create ${workspaceFolder}/target/debug/grrs"
      ],
      "processCreateCommands": [
        "settings set target.run-args value1 value2 value3",
        "process launch"
      ],
      "sourceLanguages": [
        "rust"
      ],
    },
    {
      "name": "LLDB Launch",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceRoot}/src/main.rs",
      "args": [],
      "cwd": "${workspaceRoot}",
      // "externalConsole": true
      "terminal": "integrated"
    }
  ]
}